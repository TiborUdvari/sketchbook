{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "checkJs": true,
    "baseUrl": ".",
    "types": ["p5", "@webgpu/types"],
    "paths": {
      "*": ["types/*"],
      "p5": ["node_modules/@types/p5"],
      "p5/*": ["node_modules/@types/p5/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.js", "node_modules/@types/p5/*.d.ts"]
}
